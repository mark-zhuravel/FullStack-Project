generator client {
  provider = "prisma-client-js"
  output   = "../generated/mongodb"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  role      String   @default("USER") // USER или ADMIN
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
} 